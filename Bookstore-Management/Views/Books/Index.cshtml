@model IEnumerable<Bookstore_Management.Models.Book>

@{
    ViewBag.Title = "Books List";
}

<h2>Books List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Genre</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Price</td>
                <td>@book.Genre</td>
                <td>
                    <a asp-action="EditBook" asp-route-id="@book.Id">Edit</a> |
                    <a asp-action="DetailsBook" asp-route-id="@book.Id">Details</a> |
                    <a asp-action="DeleteBook" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="CreateBook" class="btn btn-primary">Create New Book</a>
